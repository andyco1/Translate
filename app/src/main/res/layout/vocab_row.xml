<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vocabCard"
    android:layout_width="match_parent"
    android:layout_height="75dp"

    android:layout_margin="8dp"
    android:padding="4dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nativePhrase"
            android:layout_width="395dp"
            android:layout_height="35dp"
            android:fontFamily="@font/roboto"
            android:text="@string/nativeLanguage"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foreignPhrase" />

        <TextView
            android:id="@+id/foreignPhrase"
            android:layout_width="395dp"
            android:layout_height="41dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/foreignLanguage"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/nativePhrase"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>